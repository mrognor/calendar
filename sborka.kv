<DeleteUniversityWindow>:
    name: "deleteuniversitywindow"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        Button:
            text: "Удалить ?"
        BoxLayout:
            spacing: 10
            padding: 10

            Button:
                text: "Да"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"
                    root.delete_university()

            Button:
                text: "Нет"
                on_release:
                    app.root.current = "changeuniversity"
                    root.manager.transition.direction = "left"
