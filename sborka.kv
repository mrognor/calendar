            opacity: 0
            id: BoxID2

            Button:
                id: ButtonID2
                on_release:
                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
                    root.set_2university_id()

            Button:
                id: ColorButtonID2
                size_hint_x: 0.2

        BoxLayout:
            opacity: 0
            id: BoxID3

            Button:
                id: ButtonID3
                on_release:
                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
                    root.set_3university_id()

            Button:
                id: ColorButtonID3
                size_hint_x: 0.2

        BoxLayout:
            opacity: 0
            id: BoxID4

            Button:
                id: ButtonID4
                on_release:
                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
                    root.set_4university_id()

            Button:
                id: ColorButtonID4
                size_hint_x: 0.2

        BoxLayout:
            padding: 10
            Button:
                text: "Назад"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"

<ChangeDayInfoWindow>:
    name: "changedayinfo"
    first_text: FirstTextID
    second_text: SecondTextID
    third_text: ThirdTextId
    fourth_text: FourthTextId
    fifth_text: FifthTextId

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Первая пара"
            TextInput:
                id: FirstTextID
                multiline: False

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Вторая пара"
            TextInput:
                id: SecondTextID
                multiline: False

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Третья пара"
            TextInput:
                id: ThirdTextId
                multiline: False

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Четвертая пара"
            TextInput:
                id: FourthTextId
                multiline: False

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Пятая пара"
            TextInput:
                id: FifthTextId
                multiline: False

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Шестая пара"

        BoxLayout:
            size_hint_y: 0.1
            Label:
                size_hint_x: 0.4
                text: "Седьмая пара"

        Label:
            text: "Zagluska"

        Button:
            size_hint_y: 0.1
            text: "Сохранить"
            on_release:
                app.root.current = "calendar"
                root.manager.transition.direction = "up"
                root.set_values()

<DeleteUniversityWindow>:
    name: "deleteuniversitywindow"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        Button:
            text: "Удалить ?"
        BoxLayout:
            spacing: 10
            padding: 10

            Button:
                text: "Да"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"
                    root.delete_university()

            Button:
                text: "Нет"
                on_release:
                    app.root.current = "changeuniversity"
                    root.manager.transition.direction = "left"
