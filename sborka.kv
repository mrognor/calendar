WindowManager:
    calendar_var: CalendarID
    change_day_info_var: ChangeDayInfoID
    CalendarWindow:
        id: CalendarID
    AddUniversityWindow:
    ChangeUniversityWindow:
    ChangeDayInfoWindow:
        id: ChangeDayInfoID
    DeleteUniversityWindow:

<CalendarWindow>:
    name: "calendar"
    monday_var: MondayID
    tuesday_var: TuesdayID
    wednesday_var: WednesdayID
    thursday_var: ThursdayID
    friday_var: FridayID
    saturday_var: SaturdayID


    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        BoxLayout:
            orientation: "horizontal"
            spacing: 10

            Button:
                id: MondayID
                text: "1"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_monday()

            Button:
                id: TuesdayID
                text: "2"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_tuesday()

            Button:
                id: WednesdayID
                text: "3"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_wednesday()

        BoxLayout:
            orientation: "horizontal"
            spacing: 10

            Button:
                id: ThursdayID
                text: "4"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_thursday()

            Button:
                id: FridayID
                text: "5"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_friday()

            Button:
                id: SaturdayID
                text: "6"
                on_release:
                    app.root.current = "changedayinfo"
                    root.manager.transition.direction = "down"
                    root.on_saturday()

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 2
            spacing: 20

            Button:
                text: "Мэнеджер вузов"
                on_release:
                    app.root.current = "changeuniversity"
                    root.manager.transition.direction = "right"

            Button:
                text: "Добавить вуз"
                on_release:
                    app.root.current = "adduniversity"
                    root.manager.transition.direction = "left"

<AddUniversityWindow>:
    name: "adduniversity"
    button_var1: Button1ID
    button_var2: Button2ID
    button_var3: Button3ID
    button_var4: Button4ID
    button_var5: Button5ID
    button_var6: Button6ID

    button_var7: Button7ID
    button_var8: Button8ID
    button_var9: Button9ID
    button_var10: Button10ID
    button_var11: Button11ID
    button_var12: Button12ID

    text_input_var: TextInputID

    BoxLayout:
        padding: 10
        orientation: "vertical"

        BoxLayout:
            spacing: 10
            orientation: "vertical"

            Label:
                text: "Введите название"
                size_hint_y: 0.2

            TextInput:
                id: TextInputID
                multiline: False

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            Label:
                text: "Задайте цвет"
                size_hint_y: 0.2

            GridLayout:
                cols: 3
                Button:
                    id: Button1ID
                    background_color: 0, 0, 1, 1
                    base_color: 0, 0, 1, 1
                    on_release:
                        root.set_butonncolor(1)

                Button:
                    id: Button2ID
                    background_color: 0, 1, 0, 1
                    base_color: 0, 1, 0, 1
                    on_release:
                        root.set_butonncolor(2)

                Button:
                    id: Button3ID
                    background_color: 1, 0, 0, 1
                    base_color: 1, 0, 0, 1
                    on_release:
                        root.set_butonncolor(3)

                Button:
                    id: Button4ID
                    background_color: 1, 1, 0, 1
                    base_color: 1, 1, 0, 1
                    on_release:
                        root.set_butonncolor(4)

                Button:
                    id: Button5ID
                    background_color: 1, 0, 1, 1
                    base_color: 1, 0, 1, 1
                    on_release:
                        root.set_butonncolor(5)

                Button:
                    id: Button6ID
                    background_color: 0, 1, 1, 1
                    base_color: 0, 1, 1, 1
                    on_release:
                        root.set_butonncolor(6)

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            Label:
                text: "Укажите день недели"
                size_hint_y: 0.2

            GridLayout:
                cols: 3

                Button:
                    id: Button7ID
                    text: "Понедельник"
                    on_release:
                        root.set_butonncolor(7)

                Button:
                    id: Button8ID
                    text: "Вторник"
                    on_release:
                        root.set_butonncolor(8)

                Button:
                    id: Button9ID
                    text: "Среда"
                    on_release:
                        root.set_butonncolor(9)

                Button:
                    id: Button10ID
                    text: "Четверг"
                    on_release:
                        root.set_butonncolor(10)

                Button:
                    id: Button11ID
                    text: "Пятница"
                    on_release:
                        root.set_butonncolor(11)

                Button:
                    id: Button12ID
                    text: "Суббота"
                    on_release:
                        root.set_butonncolor(12)

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: "Отменить"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "right"

            Button:
                text: "Сохранить"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "right"
                    root.set_university_values()

