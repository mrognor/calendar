WindowManager:
    calendar_var: CalendarID
    change_day_info_var: ChangeDayInfoID
    CalendarWindow:
        id: CalendarID
    AddUniversityWindow:
    ChangeUniversityWindow:
    ChangeDayInfoWindow:
        id: ChangeDayInfoID
    DeleteUniversityWindow:

<CalendarWindow>:
    name: "calendar"
    monday_var: MondayID
    tuesday_var: TuesdayID
    wednesday_var: WednesdayID
    thursday_var: ThursdayID
    friday_var: FridayID
    saturday_var: SaturdayID

    week_var: WeekID

    monday_var_1color: Monday1ColorID
    monday_var_2color: Monday2ColorID
    monday_var_3color: Monday3ColorID
    monday_var_4color: Monday4ColorID

    tuesday_var_1color: Tuesday1ColorID
    tuesday_var_2color: Tuesday2ColorID
    tuesday_var_3color: Tuesday3ColorID
    tuesday_var_4color: Tuesday4ColorID

    wednesday_var_1color: Wednesday1ColorID
    wednesday_var_2color: Wednesday2ColorID
    wednesday_var_3color: Wednesday3ColorID
    wednesday_var_4color: Wednesday4ColorID

    thursday_var_1color: Thursday1ColorID
    thursday_var_2color: Thursday2ColorID
    thursday_var_3color: Thursday3ColorID
    thursday_var_4color: Thursday4ColorID

    friday_var_1color: Friday1ColorID
    friday_var_2color: Friday2ColorID
    friday_var_3color: Friday3ColorID
    friday_var_4color: Friday4ColorID

    saturday_var_1color: Saturday1ColorID
    saturday_var_2color: Saturday2ColorID
    saturday_var_3color: Saturday3ColorID
    saturday_var_4color: Saturday4ColorID

    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: 0.2
            Button:
                id: WeekID
                text: ""
                on_release:
                    root.set_next_week()

            Button:
                size_hint_x: 0.2

        BoxLayout:
            orientation: "horizontal"
            spacing: 10

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button:
                        id:Monday1ColorID
                    Button:
                        id:Monday2ColorID
                    Button:
                        id:Monday3ColorID
                    Button:
                        id:Monday4ColorID

                BoxLayout:
                    Button:
                        id: MondayID
                        text: "1"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_monday()

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button:
                        id:Tuesday1ColorID
                    Button:
                        id:Tuesday2ColorID
                    Button:
                        id:Tuesday3ColorID
                    Button:
                        id:Tuesday4ColorID

                BoxLayout:
                    Button:
                        id: TuesdayID
                        text: "2"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_tuesday()
            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button:
                        id: Wednesday1ColorID
                    Button:
                        id: Wednesday2ColorID
                    Button:
                        id: Wednesday3ColorID
                    Button:
                        id: Wednesday4ColorID

                BoxLayout:
                    Button:
                        id: WednesdayID
                        text: "3"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_wednesday()

        BoxLayout:
            orientation: "horizontal"
            spacing: 10

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button:
                        id: Thursday1ColorID
                    Button:
                        id: Thursday2ColorID
                    Button:
                        id: Thursday3ColorID
                    Button:
                        id: Thursday4ColorID

                BoxLayout:
                    Button:
                        id: ThursdayID
                        text: "4"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_thursday()

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button
                        id: Friday1ColorID
                    Button:
                        id: Friday2ColorID
                    Button:
                        id: Friday3ColorID
                    Button:
                        id: Friday4ColorID

                BoxLayout:
                    Button:
                        id: FridayID
                        text: "5"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_friday()

            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    size_hint_y: 0.1

                    Button:
                        id: Saturday1ColorID
                    Button:
                        id: Saturday2ColorID
                    Button:
                        id: Saturday3ColorID
                    Button:
                        id: Saturday4ColorID

                BoxLayout:
                    Button:
                        id: SaturdayID
                        text: "6"
                        on_release:
                            app.root.current = "changedayinfo"
                            root.manager.transition.direction = "up"
                            root.on_saturday()

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"
            padding: 2
            spacing: 20

            Button:
                text: "Мэнеджер вузов"
                on_release:
                    app.root.current = "changeuniversity"
                    root.manager.transition.direction = "right"

            Button:
                text: "Добавить вуз"
                on_release:
                    app.root.current = "adduniversity"
                    root.manager.transition.direction = "left"

<AddUniversityWindow>:
    name: "adduniversity"
    button_var1: Button1ID
    button_var2: Button2ID
    button_var3: Button3ID
    button_var4: Button4ID
    button_var5: Button5ID
    button_var6: Button6ID

    button_var7: Button7ID
    button_var8: Button8ID
    button_var9: Button9ID
    button_var10: Button10ID
    button_var11: Button11ID
    button_var12: Button12ID

    text_input_var: TextInputID

    BoxLayout:
        padding: 10
        orientation: "vertical"

        BoxLayout:
            spacing: 10
            orientation: "vertical"

            Label:
                text: "Введите название"
                size_hint_y: 0.2

            TextInput:
                id: TextInputID
                multiline: False

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            Label:
                text: "Задайте цвет"
                size_hint_y: 0.2

            GridLayout:
                cols: 3
                Button:
                    id: Button1ID
                    background_color: 0, 0, 1, 1
                    base_color: 0, 0, 1, 1
                    on_release:
                        root.set_butonncolor(1)

                Button:
                    id: Button2ID
                    background_color: 0, 1, 0, 1
                    base_color: 0, 1, 0, 1
                    on_release:
                        root.set_butonncolor(2)

                Button:
                    id: Button3ID
                    background_color: 1, 0, 0, 1
                    base_color: 1, 0, 0, 1
                    on_release:
                        root.set_butonncolor(3)

                Button:
                    id: Button4ID
                    background_color: 1, 1, 0, 1
                    base_color: 1, 1, 0, 1
                    on_release:
                        root.set_butonncolor(4)

                Button:
                    id: Button5ID
                    background_color: 1, 0, 1, 1
                    base_color: 1, 0, 1, 1
                    on_release:
                        root.set_butonncolor(5)

                Button:
                    id: Button6ID
                    background_color: 0, 1, 1, 1
                    base_color: 0, 1, 1, 1
                    on_release:
                        root.set_butonncolor(6)

        BoxLayout:
            orientation: "vertical"
            spacing: 10

            Label:
                text: "Укажите день недели"
                size_hint_y: 0.2

            GridLayout:
                cols: 3

                Button:
                    id: Button7ID
                    text: "Понедельник"
                    on_release:
                        root.set_butonncolor(7)

                Button:
                    id: Button8ID
                    text: "Вторник"
                    on_release:
                        root.set_butonncolor(8)

                Button:
                    id: Button9ID
                    text: "Среда"
                    on_release:
                        root.set_butonncolor(9)

                Button:
                    id: Button10ID
                    text: "Четверг"
                    on_release:
                        root.set_butonncolor(10)

                Button:
                    id: Button11ID
                    text: "Пятница"
                    on_release:
                        root.set_butonncolor(11)

                Button:
                    id: Button12ID
                    text: "Суббота"
                    on_release:
                        root.set_butonncolor(12)

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: "Отменить"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "right"

            Button:
                text: "Сохранить"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "right"
                    root.set_university_values()

