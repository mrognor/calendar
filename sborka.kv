                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
                    root.set_2university_id()

            Button:
                id: ColorButtonID2
                size_hint_x: 0.2

        BoxLayout:
            opacity: 0
            id: BoxID3

            Button:
                id: ButtonID3
                on_release:
                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
                    root.set_3university_id()

            Button:
                id: ColorButtonID3
                size_hint_x: 0.2

        BoxLayout:
            opacity: 0
            id: BoxID4

            Button:
                id: ButtonID4
                on_release:
                    app.root.current = "deleteuniversitywindow"
                    root.manager.transition.direction = "right"
